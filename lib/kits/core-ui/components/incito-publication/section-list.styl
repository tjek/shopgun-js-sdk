.sgn-sections-list-items-container
    height 650px
    overflow-y scroll
    list-style-type none
    padding 0 10px

.sgn-sections-list-item-container
    width 31%
    text-align center
    margin 1%
    padding-bottom 20px
    float left

.sgn-sections-img-container 
    padding 8px

    > img
        width 100%

@media (max-width: 450px)
    .sgn-sections-list-item-container
        width 48%

@media (max-height 900px)
    .sgn-sections-list-items-container
        height 540px

@media (max-height 790px)
    .sgn-sections-list-items-container
        height 400px
