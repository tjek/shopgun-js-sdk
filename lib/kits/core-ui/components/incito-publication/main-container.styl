

.sgn_loader-container
    position absolute
    background rgba(0, 0, 0, .3)
    top 0
    left 0
    right 0
    bottom 0

    .sgn_loader 
        border: 16px solid #2c2c2e
        border-top 16px solid #8b8c8f
        border-radius 50%
        width 80px
        height 80px
        animation spin 2s linear infinite
        margin auto
        margin-top 120px

    @keyframes spin 
        0%
            transform: rotate(0deg)
        100%
            transform: rotate(360deg)

.sgn__incito
    &[data-component-template="true"]
        font-family sans-serif
        position absolute
        top 0
        left 0
        right 0            

        .incito
            padding-top 80px
            
        .sgn-incito__scroll-progress
            width 100%
            height 14px
            background-color rgba(28, 28, 30, 0.5)
            position absolute
            line-height 1.3
            margin-top -16px
            margin-left -16px

            .sgn-incito__scroll-progress-bar
                height: 100%
                background-color rgb(139, 140, 143)
                transition transform 0.2s ease 0s
                will-change transform
                transform-origin 0px 0px
                transform scaleX(0)
            
            .sgn-incito__scroll-progress-label
                margin auto
                margin-top -14px
                width 100%
                font-size 11px
                text-align center
                position absolute

        .sgn__header
            position fixed
            display none
            font-family sans-serif
            z-index 99
            height 80px
            margin auto
            width 100%
            text-align center
            animation-duration .4s
            animation-iteration-count 1

            > .sgn__nav
                position relative
                display inline-block
                height 66px
                background-color transparent
                margin-top 8px
                border-radius 12px
                padding 0 16px
                overflow hidden
                background-color rgb(44, 44, 46)
                box-shadow rgba(0, 0, 0,  0.4) 0px 5px 16px, rgba(0, 0, 0, 0.2) 0px 0px 1px
                text-align center
                color rgb(243, 243, 249)

                .sgn-pp__progress
                    height 8px

                    .sgn-pp-progress__bar
                        height 8px

                > button
                    color inherit
                    background-color transparent
                    display inline-block
                    vertical-align middle
                    padding 18px 12px
                    border 0
                    cursor pointer

                    > svg
                        width 25px

                    .sgn-header-icon-svg-close
                        width 18px

                    .sgn__offer-shopping-list-counter
                        display block
                        position absolute
                        margin-left 20px
                        margin-top -34px
                        padding 1px
                        background #f3f3f9
                        color #202020
                        border-radius 10px
                        font-size 11px
                        box-shadow 1px 2px rgba(0, 0, 0, 0.3)
                        width 17px
                        height 17px
                        line-height 1.5
                        animation-duration .4s
                        animation-iteration-count 1

        .sgn-animate-bounce
            animation-name sgn-animate-bounce
            animation-timing-function ease


        .sgn-animate-header
            display block
            animation-name sgn-animate-header
            animation-timing-function ease

        @keyframes sgn-animate-bounce
            0%
                transform translateY(0)
            50%
                transform translateY(-8px)
            100%
                transform translateY(0)

        @keyframes sgn-animate-header
            0%
                transform translateY(-100px)
            100%
                transform translateY(0)

        .sgn-clearfix
            clear both

        .sgn-modal-container
            position fixed
            top 0
            left 0
            bottom 0
            right 0
            content ' '
            background rgba(0, 0, 0, 0.1)

        .sgn-blocker
            position fixed
            top 0
            left 0
            bottom 0
            right 0
            content ' '


    &[data-component-template-disable-header="true"]
        .incito
            padding-top 0
