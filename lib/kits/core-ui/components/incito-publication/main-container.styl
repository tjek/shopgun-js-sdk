

.sgn_loader-container
    position absolute
    background rgba(0, 0, 0, .3)
    top 0
    left 0
    right 0
    bottom 0

    .sgn_loader 
        border: 16px solid #2c2c2e
        border-top 16px solid #8b8c8f
        border-radius 50%
        width 80px
        height 80px
        animation spin 2s linear infinite
        margin auto
        margin-top 120px

    @keyframes spin 
        0%
            transform: rotate(0deg)
        100%
            transform: rotate(360deg)

.sgn__incito
    &[data-component-template="true"]
        font-family sans-serif
        position absolute
        top 0
        left 0
        right 0            

        .incito
            padding-top 80px
            
        .sgn-incito__scroll-progress
            width 100%
            height 14px
            background-color rgba(28, 28, 30, 0.5)
            position absolute
            line-height 1.3
            margin-top -16px
            margin-left -16px

            .sgn-incito__scroll-progress-bar
                height: 100%
                background-color rgb(139, 140, 143)
                transition transform 0.2s ease 0s
                will-change transform
                transform-origin 0px 0px
                transform scaleX(0)
            
            .sgn-incito__scroll-progress-label
                margin auto
                margin-top -14px
                width 100%
                font-size 11px
                text-align center
                position absolute
        
        .sgn__header
            position fixed

        .sgn-clearfix
            clear both

        .sgn-modal-container
            position fixed
            top 0
            left 0
            bottom 0
            right 0
            content ' '
            background rgba(0, 0, 0, 0.1)

        .sgn-blocker
            position fixed
            top 0
            left 0
            bottom 0
            right 0
            content ' '


    &[data-component-template-disable-header="true"]
        .incito
            padding-top 0
