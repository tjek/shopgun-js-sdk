.sgn-incito-publication--open
    overflow hidden !important

.sgn_loader-container
    position fixed
    background #fff
    top 0
    left 0
    right 0
    bottom 0

    .sgn_loader 
        position absolute
        top calc(50% - 80px)
        left calc(50% - 40px)
        border: 16px solid #2c2c2e
        border-top 16px solid #8b8c8f
        border-radius 50%
        width 80px
        height 80px
        animation spin 2s linear infinite

    @keyframes spin 
        0%
            transform: rotate(0deg)
        100%
            transform: rotate(360deg)

.sgn__incito
    &[data-component-template="true"]
        font-family sans-serif
        position fixed
        top 0
        left 0
        right 0         
        bottom 0
        overflow-y auto
        z-index 99

        .incito
            padding-top 80px
        
        .sgn__nav
            position fixed
            transform translateX(-50%)
            z-index 1

        .incito__view
            &[data-role="offer"]
                cursor pointer

    &[data-component-template-disable-header="true"]
        .incito
            padding-top 0
