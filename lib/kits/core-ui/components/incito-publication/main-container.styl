

.sgn-incito-publication--open
    overflow hidden

.sgn_loader-container
    position fixed
    background rgba(0, 0, 0, .3)
    top 0
    left 0
    right 0
    bottom 0

    .sgn_loader 
        border: 16px solid #2c2c2e
        border-top 16px solid #8b8c8f
        border-radius 50%
        width 80px
        height 80px
        animation spin 2s linear infinite
        margin auto
        margin-top 120px

    @keyframes spin 
        0%
            transform: rotate(0deg)
        100%
            transform: rotate(360deg)

.sgn__incito
    &[data-component-template="true"]
        font-family sans-serif
        position absolute
        top 0
        left 0
        right 0         
        height 100%
        overflow-y auto

        .incito
            padding-top 80px
        
        .sgn__header
            position fixed
        
        .sgn__nav
            z-index 1

        .incito__view
            &[data-role="offer"]
                cursor pointer

    &[data-component-template-disable-header="true"]
        .incito
            padding-top 0