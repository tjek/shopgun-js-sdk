.sgn-cart-popup
    position fixed
    background #fff
    border-radius 6px
    padding 10px 0px 10px 10px
    top 50vh
    left 50vw
    transform translate(-50%, -70%)

    > button
        background gray
        border none
        text-align center
        margin 4px 2px
        cursor pointer

.sgn-cart-dd
    display block
    z-index 9
    position absolute
    background #fff
    /* border-radius 6px
    padding 10px 0px 10px 10px */

.sgn-cart-ol
    height 350px
    width 600px
    overflow-y scroll
    list-style-type none
    padding 10px
    color #000000

.sgn-cart-li-flex-container
    border-bottom 1px solid #eee
    height 40px
    align-items center

    > button
        background gray
        border none
        text-align center
        margin 4px 2px
        cursor pointer

.sgn-cart-li-div-text
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
