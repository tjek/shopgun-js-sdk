.sgn-pages-popup
    position fixed
    background #fff
    border-radius 6px
    padding 10px 0px 10px 10px
    top 50vh
    left 50vw
    width: 90%;
    max-width: 800px;
    transform translate(-50%, -70%)

.sgn-pages-dd
    display block
    z-index 9
    position absolute
    background #eee

.sgn-pages-popup
    background #eee
    color #000000

.sgn-pages-ol
    height 450px
    overflow-y scroll
    list-style-type none
    padding 10px

.sgn-page-li
    width 30%
    text-align center
    background #fff
    margin 1%
    padding 20px 0
    float left

.sgn-pages-img-container 

    > img
        height 150px
        width 120px

@media (max-width: 1094px)
    .sgn-page-li
        width 48%