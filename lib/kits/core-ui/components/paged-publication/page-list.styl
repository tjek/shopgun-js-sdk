.sgn-pages-ol
    height 650px
    overflow-y scroll
    list-style-type none
    padding 0 10px

.sgn-page-li
    width 31%
    text-align center
    margin 1%
    padding-bottom 20px
    float left

.sgn-pages-img-container 
    padding 8px

    > img
        width 100%

@media (max-width: 450px)
    .sgn-page-li
        width 48%

@media (max-height 900px)
    .sgn-pages-ol
        height 540px

@media (max-height 790px)
    .sgn-pages-ol
        height 400px
