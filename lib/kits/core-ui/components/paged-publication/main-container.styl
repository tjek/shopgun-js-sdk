.sgn-paged-publication--open
    overflow hidden !important

.sgn__pp
    &[data-component-template="true"]
        font-family inherit

        button
            font-family inherit

        input
            font-family inherit

        .verso__scroller
            top 80px
        
        .sgn-pp__control
            background transparent
            border 0

        &[data-layout-fixed="true"]
            z-index 99

        &[data-component-template-disable-header="true"]
        &[data-component-template-enable-sidebar="true"]
            .verso__scroller
                top 0

        &[data-zoomed-in="true"]
            .sgn__nav-content
                padding 8px 14px

        .sgn-pp__control
            cursor pointer
            transition opacity ease .3s
            font-size 60px

            &[data-direction="prev"]
                left 50px

            &[data-direction="next"]
                right 50px

            &[data-direction="first"]
                left 8px

            &[data-direction="last"]
                right 8px

.sgn-clearfix
    clear both
