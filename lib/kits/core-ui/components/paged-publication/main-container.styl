.sgn__pp
    &[data-component-template="true"]
        font-family sans-serif

        .verso__scroller
            top 80px

    &[data-component-template-disable-header="true"]
        .verso__scroller
            top 0

.sgn-clearfix
    clear both

.sgn-modal-container
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    content ' '
    background rgba(0, 0, 0, 0.1)

.sgn-blocker
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    content ' '
