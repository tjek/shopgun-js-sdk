.sgn__pp
    position relative
    color #000
    overflow hidden
    outline 0

.verso__scroller
    top 50px

.sgn__header
    position absolute
    z-index 99
    height 50px
    margin auto
    width 100%

    > .sgn__nav-logo
        padding 10px

    > .sgn__nav
        position absolute
        right 10px
        top 10px
        background-color transparent

        > button
            color #f5f5f5
            background-color rgba(0, 0, 0, 0.2)
            min-width 25px
            display inline-block
            vertical-align middle
            border-radius 4px
            padding 6px 12px
            border 1px solid transparent
            min-width 70px
            cursor pointer

.sgn__nav-menu
    display none
    width 90%
    max-width 400px
    background #ffffff
    color #000000
    list-style-type none
    padding 10px
    border-radius 6px
    margin-top 5px

    > li
        border-bottom 1px solid #eee
        padding 8px
        cursor pointer

        &:hover
            background-color #D4D4D4

.sgn-clearfix
    clear both

.sgn-blocker
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    content ' '
    background rgba(0, 0, 0, 0.1)
