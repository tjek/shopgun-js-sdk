.sgn__pp
    position relative
    color #000
    overflow hidden
    outline 0

.verso__scroller
    top 80px

.sgn__header
    position absolute
    font-family sans-serif
    z-index 99
    height 80px
    margin auto
    width 100%

    > .sgn__nav-logo
        padding 10px

    > .sgn__nav
        position relative
        width 160px
        height 66px
        background-color transparent
        margin auto
        margin-top 8px
        border-radius 12px
        overflow hidden
        background-color rgba(0,0,0, .1)
        box-shadow rgba(0, 0, 0,  0.4) 0px 5px 16px, rgba(0, 0, 0, 0.2) 0px 0px 1px
        text-align center

        > button
            color #F3F3F9
            background-color transparent
            display inline-block
            vertical-align middle
            border-radius 4px
            padding 18px 12px
            border 1px solid transparent
            min-width 70px
            cursor pointer

            > svg
                width 25px

            .sgn__offer-shopping-counter
                display block
                position absolute
                margin-left 30px
                margin-top -8px
                padding 1px
                border 1px solid #f3f3f9
                color #f3f3f9
                border-radius 10px
                font-size 10px

.sgn-clearfix
    clear both

.sgn-blocker
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    content ' '
    background rgba(0, 0, 0, 0.1)
