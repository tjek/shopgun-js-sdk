.sgn__pp
    position relative
    color #000
    overflow hidden
    outline 0

.verso__scroller
    top 50px

.sgn__header
    position absolute
    z-index 99
    height 50px
    margin auto
    width 100%

    > .sgn__nav
        position absolute
        right 10px
        top 10px
        background-color transparent

        > button
            color #f5f5f5
            background-color rgba(0, 0, 0, 0.2)
            min-width 25px
            display inline-block
            vertical-align middle
            border-radius 4px
            padding 6px 12px
            border 1px solid transparent
            min-width 70px
            cursor pointer

.sgn-blocker
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    content ' '
    background rgba(0, 0, 0, 0.1)
