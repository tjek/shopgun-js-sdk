.sgn-paged-publication--open
    overflow hidden !important

.sgn__pp
    &[data-component-template="true"]
        font-family sans-serif

        .verso__scroller
            top 80px
        
        .sgn-pp__control
            background transparent
            border 0

        &[data-layout-fixed="true"]
            z-index 99

        &[data-component-template-disable-header="true"]
            .verso__scroller
                top 0

        &[data-zoomed-in="true"]
            .sgn__nav-content
                padding 8px 14px

.sgn-clearfix
    clear both
