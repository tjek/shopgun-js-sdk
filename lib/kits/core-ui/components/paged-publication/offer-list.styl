.sgn-offers-container
    position relative
    background #fff
    border-radius 6px
    padding 10px 0px 10px 10px
    color #000000
    width 90%
    max-width 545px
    margin auto
    
.sgn-scroll-contents
    position relative
    background #ffffff

.sgn-offers-ol
    height 370px
    overflow-y scroll
    list-style-type none
    padding 0 10px
    color #000000

.sgn-offers-search-container
    padding 10px

.sgn-offers-search-text
    width 96%
    height 25px
    border 1px solid #a5a5a5
    border-radius 6px

.sgn-offers-li-flex-container
    border-bottom 1px solid #eee
    
    &:last-child
            clear both

.sgn-offers-li-div-img
    padding 5px
    width 20%
    float left

    > img
        object-fit cover
        width 60px
        height 60px

.sgn-offers-li-div-text
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    width 76%
    float left
    padding 10px 0

.sgn-offers-text-heading
    color #8aa31b
    font-weight bold

@media (max-height 790px)
    .sgn-offers-ol
        height 300px
