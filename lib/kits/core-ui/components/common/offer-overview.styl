.sgn__incito
    .sgn-offer-overview-container
        height 100%
        overflow-y scroll

.sgn__pp
    .sgn-offer-overview-container
        height 100%

.sgn-offer-overview-popup
    position relative
    background #F3F3F9
    color #202020
    border-radius 12px
    padding 10px
    width 90%
    max-width 666px
    max-height calc(94% - 80px)
    margin auto
    margin-top 80px
    overflow-y auto
    box-shadow rgba(0, 0, 0, 0.7) 0px 20px 55px, rgba(0, 0, 0, 0.3) 0px 0px 1px
    text-align left

    button
        background-color #d3d3d3
        padding 10px 14px
        font-size 12px
        border-radius 6px
        border 0
        min-width 70px
        transition .2s

        &:hover
            opacity 0.8
            cursor pointer

    .sgn-offer-img
        background-color rgb(204, 204, 204)
        background-size cover
        background-position center center
        border-radius 6px
        overflow hidden
        position relative
        border 0px
        width 100%
        height auto
        padding-top 86%

        > img
            position absolute
            object-fit contain
            object-position center center
            top 50%
            left 50%
            max-width 98%
            max-height 98%
            height auto
            width auto
            transform translate(-50%, -50%)

    .sgn-popup-header
        border-bottom 1px solid #eee
        padding 10px
        font-weight 600
        font-size 18px

        .sgn-menu-popup-labels
            float none
            padding 0
            width auto
    
    .sgn-popup-content
        padding 10px
    
    .sgn-offer-texts-container
        overflow hidden
        color #202020
        padding 10px 0px
        text-align left
    
    .sgn-offer-heading
        font-weight 600
        line-height 1.5
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        max-width 100%

    .sgn-offer-description
        font-size 0.9em
        line-height 1.2
        opacity 0.6
        color inherit

    .sgn-offer-price
        font-variant-numeric tabular-nums
        font-size 2em

    .sgn_modal_loader 
        position absolute
        top calc(50% - 80px)
        left calc(50% - 40px)
        border: 16px solid #2c2c2e
        border-top 16px solid #8b8c8f
        border-radius 50%
        width 60px
        height 60px
        animation spin 2s linear infinite

.sgn-offer-overview-popup-v2
    max-width 80vw
    width 100%
    max-height 80vh
    height 100%
    background #F3F3F9
    padding 0
    display flex

    .sgn-modal-close
        position absolute
        display inline-block
        padding 0
        min-width 0
        width 34px
        height 34px
        background transparent
        right 0.5rem
        top 0.5rem
        border-radius 100%

        >svg
            width 100%
            height 100%

    .sgn-popup-header
        padding: 0.8rem 0 0.3rem 0

    .sgn-popup-content
        padding 0
        width 100%

    .sgn-popup-offer-container
        display flex
        width 100%
        height 100%

    .sgn-offer-texts-container
        padding 10px 0
        margin-bottom 10px
        display flex
        gap 2rem
        align-items center

    .sgn-menu-date
        margin 1em auto
        width calc(100% - 2rem)
        padding 0.5rem 1rem
        line-height 1.8;
        border-radius 10px
        border 1px solid rgba(0, 0, 0, .12)
    
    .sgn-products-container
        border-radius 10px
        max-height calc(100% - 14rem)
        overflow-y auto
        box-shadow rgba(0, 0, 0, 0.3) 0px 0px 0.25rem

    .sgn-products-texts-container
        height 100%
        overflow-y auto
        overflow-x hidden

    .sgn-offer-info
        flex 1 auto
            
    .sgn-offer-heading
        font-size 1.8em
        line-height 1.1
        white-space normal
        padding-bottom 8px
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
    
    .sgn-offer-description
        opacity 1
        font-size 0.8rem

    .sgn-offer-price
        font-size 2.5em
        font-weight 500

    .sgn-offer-img
        padding 1.25rem
        border-radius 0
        flex 1
        width auto

        >img
            max-width 90%
            max-height 90%
    
    .sgn-offer-details-container
        display flex
        padding 2rem 1.25rem
        max-height 100%
        flex-flow column
        flex 1

    .sgn-product-details
        display flex
        border-top 1px solid rgba(0, 0, 0, .12)
        padding .75rem
        align-items center
        gap: .5rem
        
        &:first-child
            border-top 0

        &[data-offer-product-quantity="0"]
            .sgn-offer-product-quantity-content
                border unset

            .sgn-offer-product-quantity-minus
                visibility hidden
            
            .sgn-offer-product-quantity-text
                visibility hidden

    .sgn-product-image
        flex 0 0 80px

        img
            width 80px
            height 80px
            object-fit contain
            object-position center center
    
    .sgn-product-heading
        flex 1 1 auto
        overflow hidden

        .sgn-product-title
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            max-width 476px
            font-weight 500
            font-size 1.1rem

            > a
                color inherit

        .sgn-product-description
            overflow hidden
            text-overflow ellipsis
            max-width 476px
            font-size 0.8rem
            display -webkit-box
            -webkit-line-clamp 2
            -webkit-box-orient vertical
        
        .arrow-up-right-from-square
            width 12px
            height 12px

    .sgn-product-price
        font-weight 500
        font-size 1.2rem

    .sgn-offer-product-quantity
        width 114px

    .sgn-offer-product-quantity-content
        display flex
        border 1px solid rgba(0, 0, 0, 0.12)
        border-radius 19.5px
        overflow hidden
        padding 2px
        margin-right: .1rem
        
        button
            min-width 0
            padding 8px 9px
            background transparent
            color #4e4e4e
            border-radius 100%
            border 2px solid #000000

            svg
                vertical-align middle
                width 16px
                height 16px
        
        input
            color #202020
            border unset
            background unset
            width 30px
            padding 8px 0
            text-align center

    .sgn-offer-product-basket
        width 5%
        float left

        button
            padding 6px
            min-width 0
            background transparent

.sgn__theme-dark
    .sgn-offer-overview-popup
        background #1c1c1e
        color #f3f3f9

        button
            color #F3F3F9
            background-color #2c2c2e

        .sgn-popup-header
            border-bottom 1px solid rgba(0, 0, 0, 0.1)
        
        .sgn-offer-img
            background-color rgba(200, 200, 200, .1)

@media (max-width 840px)
    .sgn-offer-overview-popup-v2
        max-width 92vw
        max-height 92vh
        margin-top 4vh
        
        .sgn-popup-offer-container
            flex-flow column
        
        .sgn-offer-texts-container
            flex-flow column
            gap 0
            align-items flex-start

        .sgn-offer-heading
            font-size 1.8em

        .sgn-offer-price
            font-size 2em

        .sgn-offer-img
            max-height 30%

        .sgn-offer-details-container
            padding 0 1.25rem
            max-height 70%
        
        .sgn-products-container
            max-height calc(100% - 16rem)
