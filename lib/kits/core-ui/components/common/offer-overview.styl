.sgn__incito
    .sgn-offer-overview-container
        height 100%
        overflow-y scroll

.sgn__pp
    .sgn-offer-overview-container
        height 100%

.sgn-offer-overview-popup
    position relative
    background #F3F3F9
    color #202020
    border-radius 12px
    padding 10px
    width 90%
    max-width 666px
    max-height calc(94% - 80px)
    margin auto
    margin-top 80px
    overflow-y auto
    box-shadow rgba(0, 0, 0, 0.7) 0px 20px 55px, rgba(0, 0, 0, 0.3) 0px 0px 1px
    text-align left

    button
        background-color #d3d3d3
        padding 10px 14px
        font-size 12px
        border-radius 6px
        border 0
        min-width 70px
        transition .2s

        &:hover
            opacity 0.8
            cursor pointer

    .sgn-offer-img
        background-color rgb(204, 204, 204)
        background-size cover
        background-position center center
        border-radius 6px
        overflow hidden
        position relative
        border 0px
        width 100%
        height auto
        padding-top 86%

        > img
            position absolute
            object-fit contain
            object-position center center
            top 50%
            left 50%
            max-width 98%
            max-height 98%
            height auto
            width auto
            transform translate(-50%, -50%)

    .sgn-popup-header
        border-bottom 1px solid #eee
        padding 10px
        font-weight 600
        font-size 18px

        .sgn-menu-popup-labels
            float none
            padding 0
            width auto
    
    .sgn-popup-content
        padding 10px
    
    .sgn-offer-texts-container
        overflow hidden
        color #202020
        padding 10px 0px
        text-align left
    
    .sgn-offer-heading
        font-weight 600
        line-height 1.5
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        max-width 100%

    .sgn-offer-description
        font-size 0.9em
        line-height 1.2
        opacity 0.6
        color inherit

    .sgn-offer-price
        font-variant-numeric tabular-nums
        font-size 2em

    .sgn_modal_loader 
        position absolute
        top calc(50% - 80px)
        left calc(50% - 40px)
        border: 16px solid #2c2c2e
        border-top 16px solid #8b8c8f
        border-radius 50%
        width 60px
        height 60px
        animation spin 2s linear infinite

.sgn-offer-overview-popup-v2
    max-width 100%
    width 100%
    border-radius unset
    box-shadow unset
    border-radius 0
    background rgba(255,255,255, 0.9)
    margin-top 0
    max-height 100vh
    height 100vh
    padding 0

    .sgn-popup-header
        padding 10px 20px
        margin-top 80px

    .sgn-popup-content
        padding 10px 20px

    .sgn-popup-offer-container
        display grid
        grid-template-columns repeat(auto-fit, minmax(220px, 2fr))
        gap 8px

    .sgn-products-texts-container
        margin-top 10px
            
    .sgn-offer-heading
        font-size 1.5em

    .sgn-offer-img
        background-color unset

    .sgn-offer-img-v2
        padding-top 40%

    .sgn-product-details
        padding 16px 12px
        box-shadow rgba(0, 0, 0, 0.3) 0px 1px 3px
        margin-bottom 16px
        border-radius 4px
        background #ffffff

        &:hover
            background-color #f3f3f3
    
    .sgn-product-heading
        float left
        width 70%
        padding 6px 0

    .sgn-offer-product-quantity
        float left
        width 20%

        button
            min-width 0
            padding 4px 8px
            border-radius 80%
        
        input
            color #202020
            border unset
            background unset
            width 30px
            padding 8px 0
            text-align center

    .sgn-offer-product-basket
        width 10%
        float left

        button
            padding 6px 14px
            min-width 0
            background transparent


.sgn__theme-dark
    .sgn-offer-overview-popup
        background #1c1c1e
        color #f3f3f9

        button
            color #F3F3F9
            background-color #2c2c2e

        .sgn-popup-header
            border-bottom 1px solid rgba(0, 0, 0, 0.1)
        
        .sgn-offer-img
            background-color rgba(200, 200, 200, .1)
