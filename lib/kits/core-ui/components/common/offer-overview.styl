.sgn__incito
    .sgn-offer-overview-container
        height 100%
        overflow-y scroll

.sgn__pp
    .sgn-offer-overview-container
        height 100%

.sgn-offer-overview-popup
    position relative
    background #F3F3F9
    color #202020
    border-radius 12px
    padding 10px
    width 90%
    max-width 666px
    max-height calc(94% - 80px)
    margin auto
    margin-top 80px
    overflow-y auto
    box-shadow rgba(0, 0, 0, 0.7) 0px 20px 55px, rgba(0, 0, 0, 0.3) 0px 0px 1px
    text-align left

    button
        background-color #d3d3d3
        padding 10px 14px
        font-size 12px
        border-radius 6px
        border 0
        min-width 70px
        transition .2s

        &:hover
            opacity 0.8
            cursor pointer

    .sgn-offer-img
        background-color rgb(204, 204, 204)
        background-size cover
        background-position center center
        border-radius 6px
        overflow hidden
        position relative
        border 0px
        width 100%
        height auto
        padding-top 86%

        > img
            position absolute
            object-fit contain
            object-position center center
            top 50%
            left 50%
            max-width 98%
            max-height 98%
            height auto
            width auto
            transform translate(-50%, -50%)

    .sgn-popup-header
        border-bottom 1px solid #eee
        padding 10px
        font-weight 600
        font-size 18px

        .sgn-menu-popup-labels
            float none
            padding 0
            width auto
    
    .sgn-popup-content
        padding 10px
    
    .sgn-offer-texts-container
        overflow hidden
        color #202020
        padding 10px 0px
        text-align left
    
    .sgn-offer-heading
        font-weight 600
        line-height 1.5
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        max-width 100%

    .sgn-offer-description
        font-size 0.9em
        line-height 1.2
        opacity 0.6
        color inherit

    .sgn-offer-price
        font-variant-numeric tabular-nums
        font-size 2em

    .sgn_modal_loader 
        position absolute
        top calc(50% - 80px)
        left calc(50% - 40px)
        border: 16px solid #2c2c2e
        border-top 16px solid #8b8c8f
        border-radius 50%
        width 60px
        height 60px
        animation spin 2s linear infinite

.sgn-offer-overview-popup-v2
    max-width 80vw
    width 100%
    max-height 80vh
    height 100%
    background #F3F3F9
    padding 0
    display flex

    .sgn-popup-header
        padding 10px 0

    .sgn-popup-content
        padding 0
        width 100%

    .sgn-popup-offer-container
        display flex
        width 100%
        height 100%

    .sgn-offer-texts-container
        padding 10px 0
        margin-bottom 10px
    
    .sgn-products-container
        border-radius 10px
        max-height calc(100% - 1rem)
        overflow-y auto
        box-shadow rgba(0, 0, 0, 0.4) 0px 1px 4px, rgba(0, 0, 0, 0.2) 0px 0px 1px

    .sgn-products-texts-container
        height 100%
        overflow-y auto
        overflow-x hidden
            
    .sgn-offer-heading
        font-size 1.5em

    .sgn-offer-img
        width 100%
        padding 1.25rem
        border-radius 0
    
    .sgn-offer-details-container
        display flex
        width 100%
        padding 1.25rem
        max-height 100%
        flex-flow column

    .sgn-product-details
        display flex
        width 100%
        border-top 1px solid rgba(0, 0, 0, .12)
        padding .75rem
        align-items center
        gap: .5rem
        
        &:first-child
            border-top 0

    .sgn-product-image
        flex 0 0 80px

        img
            width 80px
            height 80px
    
    .sgn-product-heading
        flex 1 1 auto
        overflow hidden

    .sgn-offer-product-quantity
        flex 0 0 160px
        justify-content flex-end

    .sgn-offer-product-quantity-content

        button
            min-width 0
            padding 8px 9px
            background transparent
            color #4e4e4e
            border-radius 100%
            box-shadow rgba(0, 0, 0, 0.4) 0px 1px 4px, rgba(0, 0, 0, 0.2) 0px 0px 1px

            svg
                vertical-align middle
                width 16px
                height 16px
        
        input
            color #202020
            border unset
            background unset
            width 30px
            padding 8px 0
            text-align center

    .sgn-offer-product-basket
        width 5%
        float left

        button
            padding 6px
            min-width 0
            background transparent


.sgn__theme-dark
    .sgn-offer-overview-popup
        background #1c1c1e
        color #f3f3f9

        button
            color #F3F3F9
            background-color #2c2c2e

        .sgn-popup-header
            border-bottom 1px solid rgba(0, 0, 0, 0.1)
        
        .sgn-offer-img
            background-color rgba(200, 200, 200, .1)
