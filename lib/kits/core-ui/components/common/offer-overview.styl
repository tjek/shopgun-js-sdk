.sgn__incito
    .sgn-offer-overview-container
        height 100%
        overflow-y scroll

.sgn__pp
    .sgn-offer-overview-container
        height 100%

.sgn-offer-overview-popup
    position relative
    border-radius 12px
    margin auto
    margin-top 80px
    overflow-y auto
    box-shadow rgba(0, 0, 0, 0.7) 0px 20px 55px, rgba(0, 0, 0, 0.3) 0px 0px 1px
    text-align left
    max-width 80vw
    width 100%
    max-height 80vh
    height 100%
    background #ffffff
    color #2f2f2f
    padding 0
    display flex

    button
        background-color #d3d3d3
        padding 10px 14px
        font-size 12px
        border-radius 6px
        border 0
        min-width 70px
        transition .2s

        &:hover
            opacity 0.8
            cursor pointer

    .sgn-offer-img
        background #ffffff
        background-size cover
        background-position center center
        overflow hidden
        position relative
        border 0px
        width auto
        height auto
        padding 1.25rem
        flex 1

        > img
            position absolute
            object-fit contain
            object-position center center
            top 50%
            left 50%
            max-width 90%
            max-height 90%
            height auto
            width auto
            transform translate(-50%, -50%)

    .sgn-popup-header
        border-bottom 1px solid #eeeeee
        font-weight 600
        font-size 1rem
        padding 10px 0

        .sgn-menu-popup-labels
            float none
            padding 0
            width auto
    
    .sgn-popup-content
        width 100%

        &[data-hide-offer-details="true"]
            .sgn-offer-texts-container
            .sgn-product-image
                display none

            .sgn-product-title
                white-space normal
            
            .sgn-product-description
                display block
    
    .sgn-offer-texts-container
        overflow hidden
        text-align left
        color #2f2f2f
        padding 10px 0
        display flex
        gap 2rem
        align-items cente
    
    .sgn-offer-heading
        font-size 1rem
        font-weight 600
        line-height 1.1
        white-space normal
        overflow hidden
        text-overflow ellipsis
        max-width 100%
        padding-bottom 8px

    .sgn-offer-description
        font-size 0.833rem
        font-weight 300
        line-height 1.2
        color inheri

    .sgn_modal_loader
        position absolute
        top calc(50% - 80px)
        left calc(50% - 40px)
        border 16px solid #2c2c2e
        border-top 16px solid #8b8c8f
        border-radius 50%
        width 60px
        height 60px
        animation spin 2s linear infinite

    .sgn-modal-close
        position absolute
        display inline-block
        padding 0
        min-width 0
        width 34px
        height 34px
        background transparent
        right 0.5rem
        top 0.5rem
        border-radius 100%

        >svg
            width 100%
            height 100%

    .sgn-menu-label
        font-size 1rem

    .sgn-popup-offer-container
        display flex
        width 100%
        height 100%

    .sgn-menu-date
        font-size 1rem
        margin 0 0 0.3rem 0
        width calc(100% - 2rem)
        padding 0.75rem 0
        line-height 1.8;
        border-radius 10px
    
    .sgn-products-container
        max-height calc(100% - 14rem)
        margin-top 10px

    .sgn-products-texts-container
        height 100%
        overflow-y auto
        overflow-x hidden
        border-radius 10px
        border 1px solid rgba(0, 0, 0, 0.1)

    .sgn-offer-info
        flex 1 auto
    
    .sgn-offer-details-container
        display flex
        padding 2rem 1.25rem
        max-height 100%
        flex-flow column
        flex 1

    .sgn-product-details
        display flex
        border-bottom 1px solid rgba(0, 0, 0, 0.1)
        padding .75rem
        align-items center
        gap: .5rem

        &:last-child
            border-bottom none

        &[data-offer-product-quantity="0"]
            .sgn-offer-product-quantity-content
                border unset

            .sgn-offer-product-quantity-minus
                visibility hidden
            
            .sgn-offer-product-quantity-text
                visibility hidden

    .sgn-product-image
        flex 0 0 80px

        img
            width 80px
            height 80px
            object-fit contain
            object-position center center
    
    .sgn-product-heading
        flex 1 1 auto
        overflow hidden

        .sgn-product-title
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            max-width 476px
            font-weight 600
            font-size 1.2rem

            > a
                color inherit

        .sgn-product-description
            overflow hidden
            text-overflow ellipsis
            max-width 476px
            font-size 0.833rem
            font-weight 200
            display -webkit-box
            -webkit-line-clamp 2
            -webkit-box-orient vertical
        
        .arrow-up-right-from-square
            width 12px
            height 12px

    .sgn-product-price-container
        display flex
        flex-direction row
        justify-content center
        align-items center

    .sgn-product-price
        font-weight 500
        font-size 1.2rem
        margin-left 0.3rem

    .sgn-offer-product-quantity
        width 110px

    .sgn-offer-product-quantity-content
        display flex
        border 1px solid rgba(0, 0, 0, 0.12)
        border-radius 19.5px
        overflow hidden
        padding 2px
        margin-right .1rem
        
        button
            min-width 0
            padding 0
            background transparent
            color #4e4e4e
            border-radius 100%
            border 1px solid #7b7b7b
            text-align center
            width 36px
            height 36px

            svg
                vertical-align middle
                width 16px
                height 16px

        input
            color #202020
            border unset
            background unset
            width 30px
            padding 8px 0
            text-align center

    .sgn-offer-product-basket
        width 5%
        float left

        button
            padding 6px
            min-width 0
            background transparent

.sgn__theme-dark
    .sgn-offer-overview-popup
        background #1c1c1e
        color #f3f3f9

        button
            color #F3F3F9
            background-color #2c2c2e

        .sgn-popup-header
            border-bottom 1px solid rgba(0, 0, 0, 0.1)
        
        .sgn-offer-img
            background-color rgba(200, 200, 200, .1)

@media (max-width 840px)
    .sgn-offer-overview-popup
        max-width 92vw
        max-height 92vh
        margin-top 4vh
        overflow-y scroll

        .sgn-popup-offer-container
            flex-flow column
            height auto

            .sgn-offer-img
                max-height 30%
                min-height 18rem

            .sgn-offer-details-container
                padding 0 1.25rem
                max-height 70%

                .sgn-popup-header
                    .sgn-menu-label
                        font-size 0.833rem

                .sgn-offer-texts-container
                    flex-flow column
                    gap 0
                    align-items flex-start
                    overflow visible

                    .sgn-offer-heading
                        font-size 1rem
                        overflow visible

                .sgn-products-container
                    max-height calc(100% - 16rem)

                    .sgn-products-texts-container
                        overflow visible

                    .sgn-product-details
                        &[data-offer-product-quantity="0"]
                            .sgn-offer-product-quantity-minus
                                display none

                            .sgn-offer-product-quantity-text
                                display none

                        .sgn-product-heading
                            flex 2

                            .sgn-product-title
                                font-size 0.833rem
                                padding-bottom 0.2rem
                                white-space normal
                                overflow visible

                            .sgn-product-description
                                font-size 0.833rem
                                white-space normal
                                overflow visible

                        .sgn-product-price-container
                            flex-direction column-reverse
                            align-items flex-end

                        .sgn-offer-product-quantity
                            width auto
                            margin-top .833rem

                        .sgn-product-price
                            flex 1
                            font-size 1.2rem
                            margin-top 1rem

                        .sgn-offer-product-quantity-content
                            button
                                cursor pointer
                                border 0.5px solid #7b7b7b

                                svg
                                    width 10px
                                    height 10px

                            input
                                color #202020
                                border unset
                                background unset
                                width 30px
                                padding 8px 0
                                text-align center
                        
            .sgn-menu-date
                font-size 0.833rem
                padding 0.75rem 0
                line-height 1.2
                margin 0 0 0.3rem 0
