.sgn-offer-details
    absolute top left
    z-index 10
    background-color #fff
    border-bottom 4px solid #000
    padding 10px
    box-shadow 0 4px 2px -2px rgba(#000, 0.4)
    opacity 0.2
    transition opacity ease 0.2s
    outline 0
    box-sizing border-box

    &.in
        opacity 1

